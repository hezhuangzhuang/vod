<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ticket_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/view_top"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@drawable/ticket_top_bg"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/view_top"
                    android:background="@android:color/white"/>

                <TextView
                    android:id="@+id/tv_from_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_top"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@mipmap/icon_position"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="0dp"
                    android:singleLine="true"
                    android:text="Luzon"
                    android:textColor="#313131"
                    />

                <View
                    android:id="@+id/view_top_line_"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_from_city"
                    android:background="@android:color/white"/>

                <View
                    android:id="@+id/view_top_line"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_from_city"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/iv_swap"
                    android:background="#DDDDDD"/>

                <TextView
                    android:id="@+id/tv_to_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/view_top_line"
                    android:background="@android:color/white"
                    android:drawableLeft="@mipmap/icon_position"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="15dp"
                    android:singleLine="true"
                    android:text="Zambales"
                    android:textColor="#313131"/>

                <ImageView
                    android:id="@+id/iv_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@id/view_top_line"
                    android:layout_alignBottom="@id/tv_to_city"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_from_city"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/icon_swap"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_to_city"
                    android:background="@mipmap/ticket_head_center"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_clock"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="15dp"
                    android:singleLine="true"
                    android:text="02-02"
                    android:textColor="#313131"
                    android:textSize="14sp"/>

                <View
                    android:id="@+id/view_buttom_line"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#DDDDDD"/>

                <TextView
                    android:id="@+id/tv_query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_buttom_line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_bt_bg"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Query"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/ticket_head_buttom"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>