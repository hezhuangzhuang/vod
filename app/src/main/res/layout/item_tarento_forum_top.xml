<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:maxLines="2"
        android:text="【headline】Dont spend all the way, take you pursue poetry and the distance"
        android:textColor="#676767"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:maxLines="1"
        android:text="username"
        android:textColor="#A674E7"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title"
        android:drawableLeft="@mipmap/icon_show_number"
        android:drawablePadding="3dp"
        android:maxLines="1"
        android:text="3000"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="6dp"
        android:layout_toLeftOf="@id/tv_number"
        android:layout_toRightOf="@id/tv_name"
        android:maxLines="1"
        android:text="2017/03/30 16:40"/>


</RelativeLayout>