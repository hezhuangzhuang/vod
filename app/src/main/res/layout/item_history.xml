<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_video"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="12dp"
        android:src="#ccc"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/iv_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="A dogs purpose"
        android:textColor="#414141"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_cover"
        android:drawableLeft="@mipmap/icon_item_history"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="04-12 08:30:25"
        android:textColor="#C8C8C8"/>

    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_describe"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/clear_tv_bg"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="clear"
        android:textColor="#A1A1A1"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_last_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tv_describe"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/tv_clear"
        android:layout_toRightOf="@id/iv_cover"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="The last play to:30:45"
        android:textColor="#C8C8C8"
        android:textSize="12sp"/>


</RelativeLayout>