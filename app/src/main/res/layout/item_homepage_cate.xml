<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_video"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:src="#ccc"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/iv_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="这是标题"
        android:textColor="#414141"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="The Philippines food specialty, to don't miss the delicious enjoyment"
        android:textColor="#C8C8C8"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_describe"
        android:layout_marginTop="2dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="300m"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tv_describe"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/tv_type"
        android:layout_toRightOf="@id/iv_cover"
        android:drawableLeft="@mipmap/icon_address"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="Long island road no "
        android:textColor="#6E6E6E"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/iv_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_name"
        android:layout_marginRight="12dp"
        android:src="@mipmap/icon_love"/>

</RelativeLayout>